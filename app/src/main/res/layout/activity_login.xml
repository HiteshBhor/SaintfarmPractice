<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_login_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Welcome to"
                    android:textSize="@dimen/login_page_welcome_text_size"
                    android:textColor="#4C4C4C"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_sans_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Explore app"
                    android:textColor="@color/et_heading_text_color"
                    android:fontFamily="@font/nunito_sans_bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Saintfarm"
                android:textSize="30sp"
                android:textColor="@color/et_heading_text_color"
                android:fontFamily="@font/nunito_sans_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Thank you for choosing us.\nEvery vegetable, fruit, grain or\nherb we locally produce on our \nfarms, is carefully curated by \nexpert hands to give you the \nrichest of experiences."
                android:textSize="@dimen/login_page_welcome_text_size"
                android:textColor="@color/et_heading_text_color"
                android:fontFamily="@font/nunito_sans_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="18dp"
                android:textColor="#4C4C4C"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_sans_bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textSize="14dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_registerForNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="end"
                    android:text="Register for a new account"
                    android:textColor="@color/et_heading_text_color"
                    android:textSize="16dp"
                    android:fontFamily="@font/nunito_sans_bold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Username*"
                android:textSize="@dimen/et_heading_text_size"
                android:textColor="@color/et_heading_text_color"
                android:fontFamily="@font/nunito_sans_regular"/>

            <EditText
                android:id="@+id/et_eMail_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="@color/page_heading_text_color"
                android:hint="Enter your username/ phone no,"
                android:textColorHint="@color/et_hint_text_color"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/nunito_sans_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password*"
                android:textSize="@dimen/et_heading_text_size"
                android:textColor="@color/et_heading_text_color"
                android:fontFamily="@font/nunito_sans_regular"/>

            <EditText
                android:id="@+id/et_password_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="@color/page_heading_text_color"
                android:hint="Password"
                android:textColorHint="@color/et_hint_text_color"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/nunito_sans_bold"/>

            <TextView
                android:id="@+id/tv_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Forgot Password"
                android:textColor="@color/et_heading_text_color"
                android:fontFamily="@font/nunito_sans_bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:text="Login"
                android:textSize="@dimen/btn_text_size"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:textAllCaps="false"
                android:fontFamily="@font/nunito_sans_bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>