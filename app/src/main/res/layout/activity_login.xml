<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.auth.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/img_login_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gts.saintfarmpractice.util.SaintfarmTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Welcome to"
                    android:textColor="#4C4C4C"
                    android:textSize="16dp"
                    app:textStyle="8" />

                <com.gts.saintfarmpractice.util.SaintfarmTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Explore app"
                    android:textColor="@color/et_heading_text_color"
                    app:textStyle="7"/>

            </LinearLayout>

            <ImageView
                android:layout_width="132dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_saintfood"/>

            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Thank you for choosing us.\nEvery vegetable, fruit, grain or\nherb we locally produce on our \nfarms, is carefully curated by \nexpert hands to give you the \nrichest of experiences."
                android:textSize="16dp"
                android:textColor="@color/et_heading_text_color"
                app:textStyle="4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:gravity="bottom"
            android:orientation="vertical">


            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="16dp"
                android:textColor="#4C4C4C"
                app:textStyle="7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.gts.saintfarmpractice.util.SaintfarmTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    app:textStyle="8"/>

                <com.gts.saintfarmpractice.util.SaintfarmTextView
                    android:id="@+id/tv_registerForNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="end"
                    android:text="Register for a new account"
                    android:textColor="@color/et_heading_text_color"
                    android:textSize="12dp"
                    app:textStyle="7"/>

            </LinearLayout>

            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Email ID*"
                android:textSize="12dp"
                android:textColor="@color/et_heading_text_color"
                app:textStyle="8"/>

            <com.gts.saintfarmpractice.util.SaintfarmEditText
                android:id="@+id/et_eMail_login"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter Email Address"
                android:inputType="text"
                app:textStyle="7" />

            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:id="@+id/tv_error_email_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#E61014"
                android:textSize="10dp"
                android:visibility="gone"
                app:textStyle="8" />


            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Password*"
                android:textSize="12dp"
                android:textColor="@color/et_heading_text_color"
                app:textStyle="8"/>

            <com.gts.saintfarmpractice.util.SaintfarmEditText
                android:id="@+id/et_password_login"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Enter Password"
                android:inputType="textPassword"
                app:textStyle="7" />

            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:id="@+id/tv_error_password_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#E61014"
                android:textSize="10dp"
                android:visibility="gone"
                app:textStyle="8" />


            <com.gts.saintfarmpractice.util.SaintfarmTextView
                android:id="@+id/tv_forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Forgot Password"
                android:textSize="12dp"
                android:textColor="@color/et_heading_text_color"
                app:textStyle="7"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="15dp"
                android:text="Login"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_bg"
                android:textAllCaps="false"
                app:textStyle="7"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>